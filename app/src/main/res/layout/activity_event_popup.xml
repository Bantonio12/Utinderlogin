<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main"
                tools:context=".event.ui.EventPopUp" android:background="@color/white">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="@string/eventsonthisdate"
            android:textColor="@color/uoftcoloourr"
            android:textSize="32sp"
            android:fontFamily="@font/catamaran_semibold"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal|top"
            android:textColorHint="@color/uoftcoloourr">

    </TextView>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/events"
            android:textColor="@color/uoftcoloourr"
            android:layout_marginStart="5dp"
            android:divider="@color/uoftcoloourr"
            android:fadeScrollbars="true"
            android:layout_below="@id/date"
            android:scrollingCache="true"
            android:smoothScrollbar="true">
    </ListView>
    <Button
            android:text="@string/back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/back"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            app:backgroundTint="@color/uoftcoloourr"
            android:layout_below="@id/events">
    </Button>
</RelativeLayout>