<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.ViewPostActivity"
        android:background="@color/white">

    <Button
            android:text="@string/Back"
            android:layout_width="70dp" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginStart="20dp"
            android:backgroundTint="@color/uoftcoloourr" android:fontFamily="@font/catamaran_light"
            android:id="@+id/Back"/>

    <Button
            android:text="@string/reply"
            android:layout_width="70dp" android:layout_height="wrap_content"
            android:layout_marginEnd="20dp" android:layout_marginTop="10dp"
            android:id="@+id/replyCommentButton" android:fontFamily="@font/catamaran_light"
            android:backgroundTint="@color/uoftcoloourr"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/userName"
              android:text="userName" android:fontFamily="@font/catamaran_light"
              android:textSize="18sp"
              android:textColor="@color/uoftcoloourr"
              android:layout_below="@id/Back"
              android:layout_marginTop="20dp" android:layout_marginEnd="20dp"
              android:layout_marginStart="20dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/postTitle"
              android:text="title here"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginTop="10dp"
              android:layout_below="@id/userName"
              android:textSize="20sp"
              android:fontFamily="@font/catamaran_light" android:textColor="@color/uoftcoloourr"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/postText"
              android:text="text here"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="10dp"
              android:layout_below="@id/postTitle" android:fontFamily="@font/catamaran_light"
              android:textSize="18sp" android:textColor="@color/uoftcoloourr"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="25dp"
              android:id="@+id/commentLabel" android:layout_above="@+id/listview"
              android:layout_marginStart="20dp" android:layout_marginBottom="10dp"
              android:text="@string/cmts" android:textColor="@color/uoftcoloourr"
              android:textSize="18sp"
              android:textStyle="bold"/>

    <ListView
            android:layout_width="380dp" android:layout_height="350dp"
            android:background="@drawable/round_shape_tedurikk"
             android:layout_centerHorizontal="true"
              android:layout_marginBottom="20dp"
              android:layout_alignParentBottom="true"
              android:id="@+id/listview"/>


</RelativeLayout>