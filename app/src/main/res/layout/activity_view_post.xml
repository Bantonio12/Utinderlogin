<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.ViewPostActivity">
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/Back"/>

    <Button
            android:text="Reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reply_button"
            android:layout_alignParentRight="true"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/userName"
              android:text="userName"
              android:textSize="18sp"
              android:textColor="@color/uoftcoloourr"
              android:layout_below="@id/Back"
              android:layout_marginTop="7dp"
              android:layout_marginStart="7dp"/>


    <Button android:layout_width="69dp"
            android:layout_height="30dp"
            android:id="@+id/followButton"
            android:layout_toRightOf="@+id/userName"
            android:layout_below="@id/Back"
            android:layout_marginLeft="12dp"
            android:textSize="8sp"
            android:text="follow"
            android:layout_marginTop="6dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/postTitle"
              android:text="title here"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:layout_marginTop="3dp"
              android:layout_below="@id/userName"
              android:textSize="20sp"
              android:textStyle="bold" android:textColor="@color/uoftcoloourr"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/postText"
              android:text="text here"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:layout_marginTop="3dp"
              android:layout_below="@id/postTitle"
              android:textSize="18sp" android:textColor="@color/uoftcoloourr"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="25dp"
              android:id="@+id/commentLabel"
              android:layout_below="@id/postText"
              android:layout_marginLeft="7dp"
              android:layout_marginRight="7dp"
              android:layout_marginTop="5dp"
              android:text="Comments:"
              android:textColor="@color/uoftcoloourr"
              android:textSize="18sp"
              android:textStyle="bold"/>

    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@id/commentLabel"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="5dp"
              android:layout_alignParentBottom="true"
              android:id="@+id/listview"/>


</RelativeLayout>