<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.CreateCommentActivity">

    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/cmt" android:fontFamily="@font/catamaran_light"
            android:backgroundTint="@color/uoftcoloourr" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="40dp"
            android:layout_marginEnd="110dp" android:id="@+id/postComment">
    </Button>

    <Button android:id="@+id/backToPost"
            android:layout_width="70dp" android:layout_height="wrap_content"
            android:text="@string/Back" android:fontFamily="@font/catamaran_light"
            android:backgroundTint="@color/uoftcoloourr" android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp" android:layout_marginStart="130dp">

    </Button>

    <EditText
            android:layout_width="380dp" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:hint="@string/cmtsmth"
            android:fontFamily="@font/catamaran_light" android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp" android:id="@+id/makingCommentText"
            android:inputType="textImeMultiLine">
    </EditText>

</RelativeLayout>