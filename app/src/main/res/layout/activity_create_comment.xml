<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.CommentActivity">

    <Button
            android:text="Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/postComment"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="361dp"
            android:layout_height="624dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/makingCommentText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backToPost" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            android:hint="Comment something..." android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/backToPost"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>