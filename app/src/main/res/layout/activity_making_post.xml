<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.MakingPostActivity" android:id="@+id/post">

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/posttt" android:fontFamily="@font/catamaran_semibold"
            android:textColorHint="@color/uoftcoloourr" android:textColor="@color/uoftcoloourr"
            android:textSize="25sp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" android:layout_marginTop="20dp">
    </TextView>

    <Button
            android:layout_width="65dp" android:layout_height="50dp"
            android:id="@+id/post_button" android:text="@string/posttt"
            android:layout_alignParentBottom="true" android:fontFamily="@font/catamaran_light"
            android:backgroundTint="@color/uoftcoloourr" android:layout_alignParentEnd="true"
            android:layout_marginEnd="140dp" android:layout_marginBottom="40dp">

    </Button>

    <Button
            android:layout_width="65dp" android:layout_height="50dp"
            android:id="@+id/backToPostButton" android:text="@string/Back"
            android:layout_alignParentBottom="true" android:fontFamily="@font/catamaran_light"
            android:backgroundTint="@color/uoftcoloourr" android:layout_alignParentEnd="true"
            android:layout_marginEnd="210dp" android:layout_marginBottom="40dp">

    </Button>

    <EditText
            android:layout_width="150dp" android:layout_height="wrap_content"
            android:inputType="textImeMultiLine" android:id="@+id/post_title"
            android:hint="@string/Title" android:layout_marginStart="20dp"
            android:layout_marginTop="40dp" android:gravity="start|top"
            android:ems="10" android:fontFamily="@font/catamaran_light">

    </EditText>

    <EditText android:id="@+id/post_text"
            android:layout_width="380dp" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_marginTop="100dp"
            android:hint="@string/saysmth" android:fontFamily="@font/catamaran_light">

    </EditText>

</RelativeLayout>