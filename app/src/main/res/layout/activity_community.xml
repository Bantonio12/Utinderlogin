<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".community.CommunityActivity">

    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/make_post"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:onClick="makePost"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="420dp" android:layout_height="100dp"
            app:backgroundTint="@color/white" android:layout_alignParentBottom="true"
            android:id="@+id/bottomNavigationView"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="@string/nothing"
                android:layout_width="50dp"
                android:layout_height="60dp" android:id="@+id/homebutton"
                android:layout_marginStart="50dp" android:layout_marginBottom="20dp"
                app:backgroundTint="@color/greyy"/>
        <Button
                android:text="@string/nothing"
                android:layout_width="50dp"
                android:layout_height="60dp" android:id="@+id/eventbutton"
                android:layout_marginStart="140dp" android:layout_marginBottom="20dp"
                app:backgroundTint="@color/greyy"/>
        <Button
                android:text="@string/nothing"
                android:layout_width="50dp"
                android:layout_height="60dp" android:id="@+id/communitybutton"
                android:layout_marginStart="230dp" android:layout_marginBottom="20dp"
                app:backgroundTint="@color/uoftcoloourr"/>
        <Button
                android:text="@string/nothing"
                android:layout_width="50dp"
                android:layout_height="60dp" android:id="@+id/mebutton"
                android:layout_marginStart="320dp" android:layout_marginBottom="20dp"
                app:backgroundTint="@color/greyy"/>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="621dp" android:id="@+id/posts">
        </ListView>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/testing_text"
            app:layout_constraintTop_toBottomOf="@+id/make_post"/>

</androidx.constraintlayout.widget.ConstraintLayout>